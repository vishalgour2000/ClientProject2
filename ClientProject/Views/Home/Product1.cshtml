    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        .product-image {
            text-align: center;
            margin-bottom: 20px;
        }

        .product-details {
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .product-title {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #007bff;
        }

        .product-description {
            margin-top: 20px;
            font-size: 1.2em;
            color: #6c757d;
        }

        .product-features {
            margin-top: 20px;
            list-style: none;
            padding-left: 0;
        }

            .product-features li {
                margin-bottom: 10px;
                font-size: 1.1em;
                color: #495057;
            }

        .product-price {
            margin-top: 20px;
            font-size: 1.8em;
            color: #28a745;
        }

        .btn-primary {
            margin-top: 20px;
            padding: 15px 30px;
            font-size: 1.2em;
            border-radius: 50px;
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.2);
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #0056b3, #007bff);
                box-shadow: 0 6px 15px rgba(0, 123, 255, 0.3);
                transform: translateY(-3px);
            }

    </style>
</head>
